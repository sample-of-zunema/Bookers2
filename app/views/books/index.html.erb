<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @newbook %>
    </div>
    <div class="col-md-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "30x30", fallback: "no_image.jpg" %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>