 <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', users: @users %>
      </div>
      <div class="col-md-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag , :profile_image, format: 'jpeg', size: "30x30", fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%= render 'users/list', users: @users %>

<% @users.each do |user| %>
  <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "30x30", fallback: "no_image.jpg" %>
<% end %>