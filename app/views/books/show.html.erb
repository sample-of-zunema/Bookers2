<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/list', user: @user, book: @newbook %>
        </div>
        <div class="col-md-9">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@user.id) do %>
                                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "30x30", fallback: "no_image.jpg" %>
                                <%= @user.name %>
                            <% end %>
                        </td>
                        <td>
                        <%= link_to book_path(@book.id) do %>
                            <%= @book.title %>
                        <% end %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>
                        <% if @user.id == current_user.id %>
                        <td>
                            <%= link_to "Edit", edit_book_path, class: "btn btn-default" %>
                        </td>
                        <td>
                            <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-default" %>
                        </td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>